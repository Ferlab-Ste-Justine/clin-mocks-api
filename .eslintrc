{
    "extends": ["eslint:recommended", "prettier"],
    "env": {
      "es6": true,
      "node": true,
      "jest": true
    },
    "rules": {
      "prettier/prettier": "error",
      "arrow-body-style": ["error", "as-needed"]
    },
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "plugins": [
      "prettier",
      "import",
      "jest"
    ]
  }